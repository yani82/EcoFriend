<!DOCTYPE html>
<html>
  <head>
    <title>EcoFriend</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">EcoFriend</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to "Recommend a Brand", new_brand_path, class:"nav-link active"%>
        </li>
        <li class="nav-item">
          <%= link_to "All Brands", brands_path, class:"nav-link active"%>
        </li>
        <li class="nav-item">
          <%= link_to "Add a Review", new_comment_path, class:"nav-link active"%>
        </li>
        <li class="nav-item">
          <%= link_to "All Reviews", comments_path, class:"nav-link active"%>
        </li>
         <li class="nav-item">
          <%= link_to "Log Out", logout_path, method: :delete, class:"nav-link active"%>
        </li>
    </div>
  </div>
</nav>

    <%= yield %>

  </body>
</html>
